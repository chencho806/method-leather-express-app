    <title>Document</title>
</head>
<body>
    <div class="container">
        <nav>
            <a href="/products">Back</a>
          </nav>
          <h1><%=products.name; %></h1>
          <img src="<%=products.img %>">
          <p><%=products.description; %></p>
          <p>$<%=products.price; %></p>
          <p><%=products.qty; %> Remaining</p>
          <form action="/products/<%=products.id%>/buy?_method=PUT" method="POST">
            <input type="submit" value="BUY">
        </form>
